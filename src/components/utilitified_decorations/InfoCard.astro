---
export interface Props {
  title: string;
  description: string;
  icon: string;
}

const { title, description, icon } = Astro.props;
---

<div class="option-card bg-gray-100 dark:bg-slate-800 p-4">
  <div class="option-icon items-center text-center">{icon}</div>
  <h3 class="text-lg md:text-2lg font-semibold">{title}</h3>
  <p class="text-gray-500 dark:text-gray-500">{description}</p>
</div>
<style>
  .option-card {
    border-radius: 12px;
    border: 2px solid #e5e5e5;
    transition: all 0.3s;
  }

  .option-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.1);
  }

  .option-icon {
    font-size: 2.5rem;
    margin-bottom: 16px;
  }
</style>
