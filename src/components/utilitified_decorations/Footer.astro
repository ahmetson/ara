---
import Link from "@/components/custom-ui/Link";
import { companyInfo } from "@/types/ara";
---

<footer
  class={`backdrop-blur-lg text-slate-500 dark:text-slate-500 flex justify-between p-2 items-center overflow-hidden `}
>
  <div class={`flex space-x-4`}>
    <Link
      uri="/meta/work"
      className=" text-slate-600 dark:text-slate-400 transition-colors"
      >How it Works?</Link
    >
    <Link
      uri="/meta/team"
      className=" text-slate-600 dark:text-slate-400 transition-colors"
      >Team</Link
    >
    <Link
      uri="/meta/policy"
      className=" text-slate-600 dark:text-slate-400 transition-colors"
      >Privacy Policy (fun-storylike-edition)</Link
    >
  </div>

  <div class="text-sm">
    (c) {companyInfo.copyrightYear}, <a
      href={"mailto:" + companyInfo.email}
      class="text-slate-600 dark:text-slate-400 transition-colors hover:text-blue-600 dark:hover:text-blue-400"
      >{companyInfo.email}</a
    >, registered: {companyInfo.registeredName}, {companyInfo.address}
  </div>
</footer>
